<div class="index__wrapper">
  <h1>TODO list</h1>
  <%= render 'form' %>
  <div class="task__wrapper">
    <div class="task__lists">
      <h2>TODO</h2>
      <% @tasks.each do | task | %>
        <% if task.is_done == false %>
        <div class="task__list">
          <div class="task__list--name">
            <%= task.name %>
          </div>
          <div class="task__list--body">
            <%= task.content %>
          </div>
          <div class="task__list--buttons">
            <div class="task__list--edit">
              <%= link_to "編集する", edit_task_path(task.id) %>
            </div>
            <div class="task__list--toggle">
              <a href="#">TODOにする</a>
            </div>
          </div>
        </div>
        <% else %>
        <% end %>
      <% end %>
    </div>
    <div class="task__lists">
      <h2>DONE</h2>
      <% @tasks.each do | task | %>
      <% if task.is_done == true %>
      <div class="task__list">
        <div class="task__list--name">
          <%= task.name %>
        </div>
        <div class="task__list--body">
          <%= task.content %>
        </div>
        <div class="task__list--buttons">
          <div class="task__list--edit">
            <a href="#">編集</a>
          </div>
          <div class="task__list--toggle">
            <a href="#">DONEにする</a>
          </div>
        </div>
      </div>
        <% else %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
